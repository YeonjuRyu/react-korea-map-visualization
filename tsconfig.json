{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "module": "esnext",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": false,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "watch": true,
    "pretty": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
